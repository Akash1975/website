    <h1 style="color: #ff0054; text-align: center; margin-top: 30px; font-family: 'Caveat', cursive;">My Certificates</h1>
    <div class="certificate-container">
        <% certificate.forEach((c, idx)=> {
            const delay = (idx * 0.15).toFixed(2);
            const imgs = Array.isArray(c.images) ? c.images : [c.image];
            imgs.forEach(img => { %>
            <div class="cert" style="animation-delay: delay s;">
                <img src="/uploads/<%= img %>" alt="<%= c.Name %> certificate" />
                <p style="color: #c8b6ff;">
                    <%= c.Name %>
                </p>
            </div>
            <% }) }) %>
    </div>

    <div id="lightbox" class="lightbox">
        <span class="lightbox-close">&times;</span>
        <img class="lightbox-img" src="" alt="Enlarged certificate" />
    </div>


     <!-- Stylish Footer -->
    <footer>
        <div class="footer-content">
            <h3>Akash Dhaigude</h3>
            <p>Showcasing my hard-earned achievements and dedication to continuous learning.</p>
