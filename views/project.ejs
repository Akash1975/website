<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Code with Akash - Projects</title>
  <link rel="shortcut icon" href="/uploads/download.jpeg" type="image/x-icon">
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Dancing+Script:wght@400..700&display=swap"
    rel="stylesheet">

  <style>
    /* RESET & BASE */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      min-height: 100vh;
      font-family: 'Poppins', sans-serif;
      display: flex;
      flex-direction: column;
      background: url('/uploads/Background.jpg') center/cover no-repeat;
      color: #fff;
      overflow-x: hidden;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    /* NAVIGATION */
    nav {
      padding: 10px 20px;
    }

    .nav-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .nav-toggle {
      display: none;
      font-size: 28px;
      background: none;
      border: none;
      color: white;
      cursor: pointer;
    }

    .nav-list {
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: center;
      gap: 20px;
    }

    .nav-list a {
      color: white;
      text-decoration: none;
      padding: 8px 12px;
      font-weight: 600;
      border-radius: 4px;
      transition: background 0.3s ease;
      display: block;
    }

    .nav-list a:hover {
      background: rgba(255, 255, 255, 0.2);
      text-decoration: underline;
    }

    /* Responsive nav */
    @media (max-width: 768px) {
      .nav-toggle {
        display: block;
        z-index: 1001;
      }

      .nav-list {
        position: fixed;
        top: 0;
        left: -250px;
        width: 250px;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        flex-direction: column;
        align-items: flex-start;
        padding-top: 60px;
        padding-left: 20px;
        gap: 15px;
        transition: left 0.3s ease-in-out;
        z-index: 1000;
      }

      .nav-list.show {
        left: 0;
      }
    }

    /* PROJECT SECTION */
    section {
      padding: 60px 20px;
      flex: 1;
    }

    section h2 {
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 50px;
      color: #f0c040;
      text-shadow: 0 0 10px rgba(240, 192, 64, 0.6);
    }

    /* GRID RESPONSIVE */
    .projects-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }

    @media (max-width: 1024px) {
      .projects-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 600px) {
      .projects-grid {
        grid-template-columns: 1fr;
      }
    }

    /* PROJECT CARD ANIMATION */
    .project-card {
      position: relative;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(5px);
      cursor: pointer;

      /* Initially hidden */
      opacity: 0;
      transform: translateY(60px);
      transition: all 0.6s ease-out;
    }

    .project-card.show {
      opacity: 1;
      transform: translateY(0);
    }

    .project-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.7);
    }

    .project-card img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      display: block;
      border-top-left-radius: 15px;
      border-top-right-radius: 15px;
      transition: transform 0.3s ease, filter 0.3s ease;
    }

    .project-card:hover img {
      transform: scale(1.05);
      filter: brightness(1.1);
    }

    .project-card::after {
      content: '';
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.25);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .project-card:hover::after {
      opacity: 1;
    }

    /* PROJECT CONTENT ANIMATION */
    .project-content {
      padding: 20px;
      position: relative;
      z-index: 1;

      /* Initially hidden */
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .project-content.show {
      opacity: 1;
      transform: translateY(0);
    }

    .project-content h3 {
      font-size: 1.3rem;
      margin-bottom: 10px;
      color: #f0c040;
    }

    .project-content p {
      font-size: 0.95rem;
      margin-bottom: 10px;
      color: #ddd;
    }

    .project-content .techstack {
      display: inline-block;
      font-size: 0.85rem;
      background: rgba(240, 192, 64, 0.2);
      color: #f0c040;
      padding: 4px 8px;
      border-radius: 5px;
      margin-bottom: 10px;
      cursor: pointer;
    }

    .project-content a {
      margin-right: 10px;
      text-decoration: none;
      color: #fff;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .project-content a:hover {
      color: #f0c040;
      transform: scale(1.1);
    }

    /* FOOTER */
    footer {
      background: linear-gradient(135deg, #1e1e1e, #333);
      color: #fff;
      text-align: center;
      padding: 25px 15px;
      margin-top: auto;
    }

    footer .social-icons {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 10px;
    }

    footer .social-icons a {
      color: #fff;
      transition: color 0.3s ease, transform 0.3s ease;
    }

    footer .social-icons a:hover {
      color: #f0c040;
      transform: scale(1.2);
    }

    footer small {
      display: block;
      margin-top: 15px;
      font-size: 0.8rem;
      color: #888;
    }
  </style>
</head>

<body>
  <nav>
    <div class="nav-header">
      <button class="nav-toggle" id="navToggle">&#9776;</button>
    </div>
    <ul class="nav-list" id="navList">
      <li><a href="/">Home</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/skills">Skills</a></li>
      <li><a href="/certificate">Certificates</a></li>
      <li><a href="/project">Projects</a></li>
    </ul>
  </nav>

  <section>
    <h2 style="margin-top: -40px;">My Projects</h2>
    <div class="projects-grid">
      <% if (projects.length===0) { %>
        <h3 style="text-align:center; grid-column:1/-1; color:#fff;">No Projects Added Yet</h3>
        <% } %>

          <% projects.forEach(p=> { %>
            <div class="project-card">
              <img src="/uploads/<%= p.image %>" alt="<%= p.title %>">
              <div class="project-content">
                <h3>
                  <%= p.title %>
                </h3>
                <p>
                  <%= p.description %>
                </p>
                <span class="techstack">
                  <%= p.techstack %>
                </span><br><br>
                <a href="<%= p.github %>" target="_blank">üîó GitHub</a>
                <a href="<%= p.live %>" target="_blank">üåê Live</a>
              </div>
            </div>
            <% }) %>
    </div>
  </section>

  <footer>
    <h3>Akash Dhaigude</h3>
    <p>Showcasing my hard-earned achievements and dedication to continuous learning.</p>
    <div class="social-icons">
      <a href="https://www.linkedin.com/in/akash-dhaigude-25ab952ab/" target="_blank">üîó Linkedin</a>
      <a href="https://github.com/Akash1975" target="_blank">üîó GitHub</a>
      <a href="mailto:akashdhaigude1975@gmail.com">üìß Gmail</a>
    </div>
    <small>&copy; <%= new Date().getFullYear() %> Akash Dhaigude. All Rights Reserved.</small>
  </footer>

  <script>
    // Mobile nav toggle
    const navToggle = document.getElementById('navToggle');
    const navList = document.getElementById('navList');
    navToggle.addEventListener('click', () => navList.classList.toggle('show'));

    // Animate projects on scroll
    const projectCards = document.querySelectorAll('.project-card');

    function animateProjects() {
      projectCards.forEach((card, i) => {
        const rect = card.getBoundingClientRect();
        if (rect.top < window.innerHeight - 100) {
          // Animate card (image)
          setTimeout(() => {
            card.classList.add('show');

            // Animate description after 300ms
            const content = card.querySelector('.project-content');
            setTimeout(() => content.classList.add('show'), 300);
          }, i * 150);
        }
      });
    }

    window.addEventListener('scroll', animateProjects);
    window.addEventListener('load', animateProjects);
  </script>
</body>

</html>